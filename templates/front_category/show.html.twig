{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}
{% block header %}{% include "front/navbarfront.html.twig" %}{% endblock %}
{% block body %}
    <h1>Catégorie {{ category.name }}</h1>
    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-2">
            {% for software in softwares %}
                <div class="col mb-4">
                    <div class="card">
                        <div class="card-header text-center">
                            <i class="fa fa-user-o fa-sizer" aria-hidden="true"></i> {{ software.name }}
                        </div>
                        <div class="card-body text-center">
                            <img class="w128max" src="{{ asset('app/images/' ~ software.image) }}" alt="{{ software.name }}" >
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Auteur  : {{ software.author }}</li>
                            <li class="list-group-item">Version : {{ software.version }}</li>
                            <li class="list-group-item">Taille  : {{ software.filesize }}</li>
                        </ul>
                    </div>
                </div>   
            {% else %}
            Aucunue donnée logiciel.            
            {% endfor %}
        </div>
    </div>
{% endblock %}
