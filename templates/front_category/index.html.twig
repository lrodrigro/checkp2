{% extends 'base.html.twig' %}

{% block title %}Catalogue de catégories{% endblock %}

{% block header %}{% include "front/navbarfront.html.twig" %}{% endblock %}
{% block body %}
    <h1>Catégorie</h1>

    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-2">
            {% for categorie in categories %}
                <div class="col mb-4">
                    <div class="card">
                        <div class="card-header text-center">
                            <i class="fa fa-user-o fa-sizer" aria-hidden="true"></i> {{ categorie.name }}
                        </div>
                        <div class="card-body text-center">
                            <img class="w128max" src="{{ asset('app/images/' ~ categorie.image) }}" alt="{{ categorie.name }}" >
                        </div>
                    </div>
                </div>   
            {% else %}
            Aucunue donnée catégorie.            
            {% endfor %}
        </div>
    </div>
{% endblock %}
