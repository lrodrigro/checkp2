{% extends 'base.html.twig' %}

{% block title %}Catalogue de logiciels{% endblock %}

{% block header %}{% include "front/navbarfront.html.twig" %}{% endblock %}

{% block body %}
<h1>Catalogue de logiciel</h1>

    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-2">
            {% for category in categories %}
                <div class="col mb-4">
                    <div class="card">
                        <div class="card-header text-center">
                            <i class="fa fa-user-o fa-sizer" aria-hidden="true"></i> {{ category.name }}
                        </div>
                        <div class="card-body text-center">
                            <img class="w128max" src="{{ asset('app/images/' ~ category.image) }}" alt="{{ category.name }}" >
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-primary btn-sm" href="{{ path('front_category_show', {'id': category.id}) }}" role="button">Voir</a>
                        </div>
                    </div>
                </div>   
            {% else %}
            Aucunue donnée catégorie.            
            {% endfor %}
        </div>
    </div>
{% endblock %}
