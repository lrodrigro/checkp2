{% extends 'base.html.twig' %}

{% block title %}Software{% endblock %}

{% block body %}
    <h1>Software</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ software.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ software.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ software.author }}</td>
            </tr>
            <tr>
                <th>AuthorEmail</th>
                <td>{{ software.authorEmail }}</td>
            </tr>
            <tr>
                <th>AuthorUrl</th>
                <td>{{ software.authorUrl }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ software.filename }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ software.version }}</td>
            </tr>
            <tr>
                <th>FileSize</th>
                <td>{{ software.fileSize }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="w64max" src="{{ asset('app/images/' ~ software.image) }}" alt="{{ software.name }}" ></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ software.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ software.created ? software.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ software.updated ? software.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning btn-sm" href="{{ path('software_edit', {'id': software.id}) }}" role="button">Modifier</a>
    <a class="btn btn-secondary btn-sm" href="{{ path('software_index') }}" type=button>Retour Ã  la liste des Logiciels</a>
    <div class="btn-delete">
        {{ include('software/_delete_form.html.twig') }}
    </div>
{% endblock %}
