<form method="post" action="{{ path('software_delete', {'id': software.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ software.id) }}">
    <button action="post" class="btn btn-danger btn-sm" role="button">Supprimer</button>
</form>
