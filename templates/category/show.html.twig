{% extends 'base.html.twig' %}

{% block title %}Voir une Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="w64max" src="{{ asset('app/images/' ~ category.image) }}" alt="{{ category.name }}" ></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>  

    <a class="btn btn-warning btn-sm" href="{{ path('category_edit', {'id': category.id}) }}" role="button">Modifier</a>
    <a class="btn btn-secondary btn-sm" href="{{ path('category_index') }}" type=button>Retour à la liste des Catégories</a>
    <div class="btn-delete">
        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
