{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td><img class="w64max" src="{{ asset('app/images/' ~ category.image) }}" alt="{{ category.image }}" ></td>
                <td>{{ category.description }}</td>
                <td>
                    <div class="card-footer text-center">
                        <a class="btn btn-primary btn-sm" href="{{ path('category_show', {'id': category.id}) }}" role="button">Voir</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('category_edit', {'id': category.id}) }}" role="button">Modifier</a>
                    </div>                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('category_new') }}" class="btn btn-primary btn-sm mb-2 button_resp" role="button">Ajouter une catégorie</a>
{% endblock %}
